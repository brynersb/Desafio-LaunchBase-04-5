{% extends "layout.njk" %}

{% block content %}
    <main>
        <div class="card">
            <section class="avatar2" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
            <section class="details">
                <h3>Professor</h3>

                <div class="item">
                    <div>Professor</div>
                    <div>{{teacher.name}}</div>
                </div>

                <div class="item">
                    <div>Idade</div>
                    <div>{{teacher.age}} Anos</div>
                </div>

                <div class="item">
                    <div>Grau de Escolaridade</div>
                    <div>{{teacher.grau}}</div>
                </div>

                <div class="item">
                    <div>Tipo de Aula</div>
                    <div>{{"Aula Presencial" if teacher.aula_type == "presencial" else "Aula à Distância"}}</div>
                </div>

                <div class="item">
                    <div>Acompanhamento</div>
                    <div>
                        {% for materia in teacher.materias %}
                            <span>{{materia}}</span>
                        {% endfor %}
                    </div>
                </div>
                <div class="item">
                    <div>Desde</div>
                    <div>{{teacher.created_at}}</div>
                </div>
                <a href="/teachers/{{teacher.id}}/edit" class="edit">Editar</a>
               
            </section>
        </div>
    </main>

{% endblock content %}